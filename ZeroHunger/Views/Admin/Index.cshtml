@model List<ZeroHunger.EF.CollectionRequest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h3>Admin Dashboard</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Request ID</th>
            <th scope="col">Requested By</th>
            <th scope="col">Requested At</th>
            <th scope="col">Max Preserve Time</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
                <tr>
                    <td>@req.Id</td>
                    <td>@req.User.Name</td>
                    <td>@req.RequestedAt</td>
                    <td>@req.MaxPreserveTime</td>
                    <td>@req.Status</td>
                    <td><a class="btn btn-outline-success btn-sm" href="/Admin/Details/@req.Id">Details</a></td>
                </tr>
        }

    </tbody>
</table>